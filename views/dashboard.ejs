<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Boostrap 5.1.3 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- Vendor Icon -->
  <link rel="stylesheet" href="/public/static/src/assets/vendor/fontawesome-free-6.1.1-web/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/public/static/src/assets/styles/dashboard.css">
  <!-- Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
  <!-- Title -->
  <link rel="icon" type="image/png" href="/public/static/src/assets/images/Dimas.png">
  <title>Dashboard Page</title>
</head>

<body>
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand">ADMIN PAGE | TRADITIONAL GAME</a>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Find Player" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </nav>
  <div class="container">
    <div class="sidebar">
      <div class="header">
        <div class="list-item">
          <a href="/dashboard">
            <i class="fa-solid fa-chart-line me-2"></i>
            <span class="description-header">DASHBOARD PAGE</span>
          </a>
        </div>
        <div class="logo">
          <img src="/public/static/src/assets/images/logoadmin.png" alt="">
        </div>
      </div>
      <div class="main">
        <div class="list-item">
          <a href="#">
            <i class="fa-solid fa-gauge-high me-2"></i>
            <span class="description">DASHBOARD</span>
          </a>
        </div>
        <div class="list-item">
          <a href="/game">
            <i class="fa-solid fa-gamepad me-2"></i>
            <span class="description">GO TO GAME</span>
          </a>
        </div>
        <div class="list-item">
          <a href="/">
            <i class="fa-solid fa-arrow-right-from-bracket me-2"></i>
            <span class="description">EXIT</span>
          </a>
        </div>
      </div>
    </div>
    <!-- MAIN CONTENT -->
    <div class="main-content">
      <div id="menu-button">
        <input type="checkbox" id="menu-checkbox">
        <label for="menu-checkbox" id="menu-label">
          <div id="hamburger"></div>
        </label>
      </div>
    <!-- DASHBOARD FIELD -->
    <!-- PLAYER LIST -->
    <div class="ps-5 pt-5 mb-3">
      <h2><i class="fa-solid fa-users me-2"></i>PLAYER LIST</h2>
    </div>
    <div class="mb-2">
      <a href="./dashboard/create" id="createbutton" class="btn btn-createUser mx-5 my-2"><i 
        class="fa-solid fa-folder-plus me-3"></i>CREATE NEW USER</a>
    </div>
    <table class="table mx-5">
      <thead class="table-color text-white">
          <tr>
              <th scope="col">Id</th>
              <th scope="col">Username</th>
              <th scope="col">Password</th>
              <th scope="col">Email</th>
              <!-- <th scope="col">Gender</th>
              <th scope="col">Age</th>
              <th scope="col">Address</th>
              <th scope="col">Phone</th>
              <th scope="col">Admin</th> -->
              <th colspan="3" scope="col">Action</th>
          </tr>
      </thead>
      <tbody>
        <% usersList.forEach(i => { %>
            <tr>
            <th scope="row"><%= i.id %></th>
            <td><%= i.username %></td>
            <td><%= i.password %></td>
            <td><%= i.email %></td>
            <td><a href="/dashboard/<%= i.id %>" class="btn btnDetail">Details</a></td>
            <td><a href="/dashboard/update/<%= i.id %>" class="btn btn-primary">Update</a></td>
            <td><a href="/dashboard/delete/<%= i.id %>" class="btn btn-danger">Delete</a></td>
            </tr>
            <% }) %>
      </tbody>
  </table>
  </div>
  <script src="/public/static/src/assets/vendor/jquery/jquery.min.js"></script>
  <script src="/public/static/src/assets/js/dashboard.js"></script>
</body>

</html>