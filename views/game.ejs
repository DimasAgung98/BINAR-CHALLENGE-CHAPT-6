<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Primary Meta Tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta author='Dimas Agung'>
    <meta name="title" content="Play Traditional Game">
    <meta name="description" content="Binar Challenge Chapter 4">

    <!-- Boostrap 5.1.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Boostrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/public/static/src/assets/styles/game.css">

    <!-- Title -->
    <link rel="icon" type="image/png" href="/public/static/src/assets/images/Dimas.png">
    <title>The Game</title>
</head>

<body>
    <!-- Sound Effect -->
    <audio id="bgaudio" src="/public/static/src/assets/mp3/Awakening.mp3"></audio>
    <audio id="click" src="/public/static/src/assets/wav/mixkit-retro-game-notification-212.wav"></audio>

    <!-- Header Section -->
    <header>
        <nav class="align-items-center d-flex m-3">
            <div class="back-button">
                <a href="./"><i class="bi bi-chevron-left"></i></a>
            </div>
            <div class="title">
                <div class="title-logo">
                    <img src="/public/static/src/assets/images/logo.png" alt="logo">
                </div>
                <div class="title-text">
                    <h1>ROCK PAPER SCISSORS</h1>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">

        <!-- Main Section -->
        <main class="row justify-content-center mt-3">
            <!-- player Section -->
            <div class="col-lg-3">
                <h1 id="username" class="player-title">PLAYER 1</h1>
                <div class="row justify-content-center">
                    <figure class="col-lg-7 pt-4 figure" id="rock">
                        <input type="image" src="/public/static/src/assets/images/batu.png" class="player" onclick="getChoice(0)">
                    </figure>
                    <figure class="col-lg-7 pt-4 figure" id="paper">
                        <input type="image" src="/public/static/src/assets/images/kertas.png" class="player" onclick="
                            getChoice(1)">
                    </figure>
                    <figure class="col-lg-7 pt-4 figure" id="scissors">
                        <input type="image" src="/public/static/src/assets/images/gunting.png" class="player" onclick="
                            getChoice(2)">
                    </figure>
                </div>
            </div>

            <!-- Status Section -->
            <div class="col-lg-2 mx-3 text-center">
                <div class="row justify-content-center">
                    <div class="col versus" id="versus">
                        <p>
                            VS
                        </p>
                    </div>
                    <div class="col win-player" id="player-win">
                        <p id="playerwin">
                            <!-- username -->
                        </p>
                        <p>
                            WIN
                        </p>
                    </div>
                    <div class="col win-com" id="com-win">
                        <p>
                            COM
                        </p>
                        <p>
                            WIN
                        </p>
                    </div>
                    <div class="col draw" id="draw">
                        <p>
                            DRAW
                        </p>
                    </div>
                </div>
            </div>

            <!-- COM Section -->
            <div class="col-3">
                <h1 class="com-title">COM</h1>
                <div class="row justify-content-center" style="transform: scaleX(-1);">
                    <figure class="col-lg-7 pt-4 figure" id="com-rock">
                        <img src="/public/static/src/assets/images/batu.png" alt="com-rock">
                    </figure>
                    <figure class="col-lg-7 pt-4 figure" id="com-paper">
                        <img src="/public/static/src/assets/images/kertas.png" alt="com-paper">
                    </figure>
                    <figure class="col-lg-7 pt-4 figure" id="com-scissors">
                        <img src="/public/static/src/assets/images/gunting.png" alt="com-scissors">
                    </figure>
                </div>
            </div>
            <div class="row text-center">
                <figure onclick="resetGame()">
                    <img src="/public/static/src/assets/images/refresh.png" class="reset-button">
                </figure>
            </div>
        </main>
        <!-- Main Section End-->
    </div>

    <img class="position-absolute bottom-0" src="/public/static/src/assets/images/1.png" style="width: 250px;" alt="1">
    <img class="position-absolute bottom-0 end-0" src="/public/static/src/assets/images/2.png" style="width: 250px;" alt="2">
    <!-- Javascript -->
    <script src="/public/static/src/assets/scripts/script.js"></script>
</body>

</html>